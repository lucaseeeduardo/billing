
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  passwordHash  String?   @map("password_hash") // For future credential auth
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts          Account[]
  sessions          Session[]
  categories        Category[]
  autoCategoryRules AutoCategoryRule[]
  categoryLimits    CategoryLimit[]
  // ImportHistory and Transactions are NOT stored in DB as per Local First policy

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Application Models

model Category {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  name        String
  icon        String
  color       String
  description String?
  active      Boolean  @default(true)
  isDefault   Boolean  @default(false) @map("is_default")
  archived    Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  autoCategoryRules AutoCategoryRule[]
  categoryLimits    CategoryLimit[]

  // Logic for "Unique name per user where archived=false" 
  // needs to be handled via partial index in DB migration.
  // Standard unique constraint here would prevent creating a new "Uber" if an archived one exists.
  // We omit @@unique([userId, name]) here to allow the logic, but recommend adding the partial index manually in SQL.
  
  @@map("categories")
}

model AutoCategoryRule {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  categoryId String   @map("category_id")
  term       String
  active     Boolean  @default(true)
  createdAt  DateTime @default(now()) @map("created_at")

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id]) // No cascade as per requirement? Actually cascade makes sense if category is HARD deleted, but we only Archive.

  @@map("auto_category_rules")
}

model CategoryLimit {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  categoryId   String   @map("category_id")
  limitValue   Decimal  @map("limit_value") @db.Decimal(12, 2)
  period       String   @default("mensal") // 'mensal' | 'semanal' | 'diario'
  notify       Boolean  @default(true)
  alertPercent Int      @default(80) @map("alert_percent")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @default(now()) @updatedAt @map("updated_at")

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id])

  @@unique([userId, categoryId])
  @@map("category_limits")
}
